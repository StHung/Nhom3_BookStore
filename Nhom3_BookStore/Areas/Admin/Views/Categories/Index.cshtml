@model PagedList.IPagedList<Nhom3_BookStore.Models.Category>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" />

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh mục</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            STT
        </th>
        <th>
            Mã nhà cung cấp
        </th>
        <th>
            Tên nhà cung cấp
        </th>
        <th>
            Mô tả
        </th>
        <th></th>
    </tr>

    @{
        int i = 0;
    }
    @foreach (var item in Model)
    {

        <tr>
            <td>
                @{ i++; }
                @i
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryDescription)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.CategoryID.Trim() }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.CategoryID.Trim() }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.CategoryID.Trim() })
            </td>
        </tr>
    }

</table>

<br />
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))



