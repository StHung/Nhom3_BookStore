@model PagedList.IPagedList<Nhom3_BookStore.Models.Customer>
@using PagedList.Mvc
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách người dùng</h2>

<p>
    @Html.ActionLink("Thêm người dùng", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Mã người dùng", "Index",
                        new { sortOrder = ViewBag.SortByID },
                        htmlAttributes: new { style = "color: #676A6D;" })
        </th>
        <th>
            @Html.ActionLink("Tên người dùng", "Index",
                        new { sortOrder = ViewBag.SortByName },
                        htmlAttributes: new { style = "color: #676A6D;" })
        </th>
        <th>
            Giới tính
        </th>
        <th>
            Ngày sinh
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Email
        </th>
        <th>
            Địa chỉ
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.CustomerID }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.CustomerID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.CustomerID })
            </td>
        </tr>
    }

</table>
