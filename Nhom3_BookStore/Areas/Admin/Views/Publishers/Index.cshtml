@model PagedList.IPagedList<Nhom3_BookStore.Models.Publisher>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" />

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Nhà xuất bản</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            STT
        </th>
        <th>
            Mã nhà xuất bản
        </th>
        <th>
            Tên nhà xuất bản
        </th>
        <th>
            Địa chỉ
        </th>
        <th></th>
    </tr>
    @{
        int i = 0;
    }

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @{ i++; }
                @i
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublisherID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublisherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.PublisherID }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.PublisherID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.PublisherID })
            </td>
        </tr>
    }

</table>

<br />
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))