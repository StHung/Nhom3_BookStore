@model Nhom3_BookStore.Models.Bill

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h3>Thay đổi trạng thái cho hóa đơn @Model.BillNo</h3>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.BillNo)
    @Html.HiddenFor(model => model.CartID)
    @Html.HiddenFor(model => model.PurchaseDate)
    @Html.HiddenFor(model => model.DeliveryMethod)
    @Html.HiddenFor(model => model.PaymentMethod)
    @Html.HiddenFor(model => model.DeliveryAddress)

    <div class="form-group">
        @Html.LabelFor(model => model.DeliveryState, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.DeliveryState,
                                  new SelectList(new string[] { "Đang giao", "Đã giao" }),
                                  new { htmlAttributes = new { @class = "form-control" }, @Value = Model.DeliveryState, @style= "margin-top: 10px;" })
            @Html.ValidationMessageFor(model => model.DeliveryState, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Lưu" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
