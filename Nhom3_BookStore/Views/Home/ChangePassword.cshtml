
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <!--form-->
    <div class="container" style="margin-bottom: 16px;">
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-4 col-sm-offset-1">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>Đổi mật khẩu</h2>
                    <form action="/index.html">
                        <div class="form-group">
                            <label for="username">Mật khẩu cũ:</label>
                            <input type="text" class="form-control" id="username" placeholder="Mật khẩu cũ...">
                        </div>
                        <div class="form-group">
                            <label for="gender">Mật khẩu mới:</label>
                            <input type="password" class="form-control" id="gender" placeholder="Mật khẩu mới...">
                        </div>
                        <div class="form-group">
                            <label for="gender">Xác nhận mật khẩu mới:</label>
                            <input type="password" class="form-control" id="gender" placeholder="Xác nhận mật khẩu mới...">
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <button class="btn btn-default">
                                    <a href="@Url.Action("Index", "Home")" style="color:white;">Lưu thay đổi</a>
                                </button>
                            </div>
                            <div class="col-sm-6">
                                <button class="btn btn-default">
                                    <a href="@Url.Action("Index", "Home")" style="color:white;">Thoát</a>
                                </button>
                            </div>
                        </div>
                    </form>
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->
